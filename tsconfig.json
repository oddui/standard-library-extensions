{
  "compilerOptions": {
    "target": "es2019",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "util",
    "ui"
  ],
  "exclude": [
    "**/*.test.ts"
  ]
}
